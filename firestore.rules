rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permite que qualquer pessoa crie um lead de qualificação.
    // Bloqueia leituras, atualizações ou exclusões do lado do cliente.
    match /qualification_leads/{leadId} {
      allow read, update, delete: if false;
      allow create: if true;
    }

    // Bloqueia o acesso a todas as outras coleções por padrão.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
